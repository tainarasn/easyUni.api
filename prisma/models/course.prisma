model Course {
    id                      Int         @id @default(autoincrement())
    name                    String
    campus                  String?
    totalPeriods            Float
    totalHoursActivites     Int?
    matriz                  Int?
    materias                Materia[]
    // materias                CourseMateria[]
    trilhas                 Trail[]
    
    students                Student[]   
}   

model Student{
    id          Int         @id

    course      Course      @relation(fields: [courseId], references: [id])
    courseId    Int
}   
model Materia{
    id          Int         @id

    course      Course      @relation(fields: [courseId], references: [id])
    courseId    Int
}   


